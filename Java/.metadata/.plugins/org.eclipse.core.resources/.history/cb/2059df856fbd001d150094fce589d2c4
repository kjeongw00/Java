package chap02_variables;

public class _03_scopeOfVariables {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//1. 메인메소드 지역변수
		//메인 메소드에서만 사용가능
		int num1 = 100;
		
		//2. 제어문의 지역변수
		if(num1 > 50) {
			int num2 = 50;
			
			//제어문은 메인메소드에 포함되어 있어
			//메인메소드의 지역변수인 num1 사용가능
			System.out.println(num1 + ", " + num2);
		}
	}

}
